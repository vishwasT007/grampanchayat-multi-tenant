# -----------------------------------------------------------------------------
# Feature Flags - Development Mode
# -----------------------------------------------------------------------------
# These are disabled in development for faster startup and less noise

# Analytics (disable in development)
VITE_ENABLE_ANALYTICS=false

# Performance Monitoring (disable in development)
VITE_ENABLE_PERFORMANCE=false

# App Check / reCAPTCHA (disable in development)
VITE_ENABLE_APP_CHECK=false

# Debug Mode (enable for verbose logging)
VITE_ENABLE_DEBUG=true

# -----------------------------------------------------------------------------
# Development-Specific Settings
# -----------------------------------------------------------------------------

# Environment identifier (helpful for debugging)
VITE_ENVIRONMENT=development

# Show environment indicator in UI (optional)
VITE_SHOW_ENV_BADGE=true

