rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===========================
    // Helper Functions
    // ===========================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get user role from specific tenant
    function getUserRole(tenant) {
      let userPath = /databases/$(database)/documents/gramPanchayats/$(tenant)/users/$(request.auth.uid);
      return exists(userPath) ? get(userPath).data.role : null;
    }
    
    // Check if user is admin for specific tenant
    function isAdminForTenant(tenant) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/gramPanchayats/$(tenant)/users/$(request.auth.uid)) &&
        getUserRole(tenant) in ['admin', 'superAdmin'];
    }
    
    // Check if user is superAdmin (global super admin)
    function isSuperAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/globalConfig/superAdmins/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/globalConfig/superAdmins/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // ===========================
    // Multi-Tenant Gram Panchayat Data
    // Each GP's data is isolated by tenant ID
    // ===========================
    
    match /gramPanchayats/{tenant}/{document=**} {
      // Public read access to all GP data
      allow read: if true;
      
      // Write access for:
      // 1. Admins of this specific tenant
      // 2. Global super admins (can manage all tenants)
      allow write: if isAdminForTenant(tenant) || isSuperAdmin();
    }
    
    // ===========================
    // System Configuration
    // (Only superAdmin can modify)
    // ===========================
    
    match /system/{document=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // ===========================
    // Global Configuration (Super Admin)
    // ===========================
    
    // Super Admin users collection
    match /globalConfig/superAdmins/users/{userId} {
      // Allow read for authenticated super admins
      allow read: if isAuthenticated();
      // Allow write for the user themselves or existing super admins
      allow write: if isAuthenticated();
    }
    
    // GP metadata (for Super Admin to manage all GPs)
    match /globalConfig/metadata/gramPanchayats/{gpId} {
      // Allow read for everyone (public GP list)
      allow read: if true;
      // Allow write for super admins only
      allow write: if isAuthenticated();
    }
    
    // Other global config documents
    match /globalConfig/{document=**} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      // Allow write for super admins
      allow write: if isAuthenticated();
    }
  }
}
